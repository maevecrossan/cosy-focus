generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

// FOCUS ITEMS TABLE
// Predetermined choices for focus status
enum FocusStatus {
  available
  in_focus
  completed
}

// The table below represents one item on a Cosy Focus board
model FocusItem {
  id        Int      @id @default(autoincrement())
  title     String
  status    FocusStatus  @default(available)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}